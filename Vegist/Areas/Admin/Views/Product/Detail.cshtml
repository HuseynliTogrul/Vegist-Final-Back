@model Product
<div class="container">

    <div class="d-flex justify-content-center align-items-center flex-column">
        <h2>Product Name: @Model.Title</h2>
        <p>Description: @Model.Description</p>

        <table class="table table-secondary table-hover">
            <thead>
                <tr>
                    <th>Product Images</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="row" style="gap:30px;border:none;" >
                        @foreach (var item in @Model.ProductImages)
                        {
                            <div class="col-2">
                                <img style="width:200px;" src="~/Client/assets/images/@item.Url" />
                            </div>
                        }
                    </td>
                </tr>
            </tbody>
        </table>

    </div>

</div>