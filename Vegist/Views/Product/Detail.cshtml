@model ProductVm
<main>
    <div class="breadcrumb">
        <div class="container">
            <div class="breadcrumb-list">
                <ul>
                    <li>
                        <a asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li>
                        <p>/ Product</p>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="productSection">
        <div class="container">
            <div class="product">
                <div class="productInfo">
                    <div class="product-detail">
                        <div class="detail-img">
                            <div class="mainImg">
                                <i class="fa-solid fa-chevron-left mainImgIcon previous"></i>
                                <img src="~/Client/assets/images/product1.webp" alt="product1" class="mainImage">
                                <i class="fa-solid fa-chevron-right mainImgIcon next"></i>
                            </div>
                            <div class="detailImg-slider">
                                <img src="~/Client/assets/images/product1.webp" alt="" class="slideImage active">
                                <img src="~/Client/assets/images/product2.webp" alt="" class="slideImage">
                                <img src="~/Client/assets/images/product3.webp" alt="" class="slideImage">
                                <img src="~/Client/assets/images/product4.webp" alt="" class="slideImage">
                            </div>
                        </div>
                        <div class="detail-info">
                            <h2>@Model.Product.Title</h2>
                            <div class="line"></div>
                            <div class="rating">
                                <ul>
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <li>
                                            @if (i <= Model.Product.Rating)
                                            {
                                                <i class="fa-solid fa-star"></i>
                                            }
                                            else
                                            {
                                                <i class="fa-regular fa-star"></i>
                                            }
                                        </li>
                                    }
                                </ul>
                            </div>
                            <div class="productPrice">
                                @if (Model.Product.DiscPrice > 0)
                                {
                                    <span>₼@Model.Product.DiscPrice</span>
                                    <span class="oldPrice">₼@Model.Product.SellPrice</span>
                                }
                                else
                                {
                                    <span>₼@Model.Product.SellPrice</span>
                                }
                            </div>
                            <p>
                                @Model.Product.Description
                            </p>
                            <div class="size-detail">
                                <h4>Size: <span class="sizeSpan">1kg</span> </h4>
                                <div class="sizeDetailList">
                                    <ul>
                                        @await Component.InvokeAsync("SizeProduct")
                                    </ul>
                                </div>
                            </div>
                            <div class="material-detail">
                                <h4>Material: <span class="materialSpan">Canada</span> </h4>
                                <div class="materialDetailList">
                                    <ul>
                                        @await Component.InvokeAsync("MaterialProduct")
                                    </ul>
                                </div>
                            </div>
                            <div class="item-quantity">
                                <p>Quantity:</p>
                                <div class="quantity-count">
                                    <button class="minusCount">-</button>
                                    <input type="number" value="1" class="counter">
                                    <button class="plusCount">+</button>
                                </div>
                            </div>
                            <div class="detail-btns">
                                <button>Add to cart</button>
                                <button>Buy it now</button>
                            </div>
                            <div class="detail-heart">
                                <i class="fa-regular fa-heart"></i>
                                <p>Wishlist</p>
                            </div>
                            <div class="line"></div>
                            <div class="detail-sku">
                                <h4>Sku: <span>123456</span></h4>
                            </div>
                            <div class="detail-share">
                                <h4>Share:</h4>
                                <ul>
                                    <li><i class="fa-brands fa-facebook-f"></i></li>
                                    <li><i class="fa-brands fa-twitter"></i></li>
                                    <li><i class="fa-brands fa-pinterest"></i></li>
                                </ul>
                            </div>
                            <div class="detail-checkout">
                                <img src="~/Client/assets/icons/visa.svg" alt="">
                                <img src="~/Client/assets/icons/paypal.svg" alt="">
                                <img src="~/Client/assets/icons/mastercard.svg" alt="">
                                <img src="~/Client/assets/icons/express.svg" alt="">
                            </div>
                        </div>
                    </div>
                    <div class="product-wrapper">
                        <ul>
                            <Li>
                                <i class="fa-solid fa-truck"></i>
                                <h3>DELIVERY INFO</h3>
                                <p>
                                    From then, delivery is generally within 2-10 days, depending on your location.
                                </p>
                            </Li>
                            <Li>
                                <i class="fa-solid fa-dollar-sign"></i>
                                <h3>30 DAYS RETURNS</h3>
                                <p>
                                    Not the right fit? No worries. We'll arrange pick up and a full refund within 7
                                    days including the delivery fee.
                                </p>
                            </Li>
                            <Li>
                                <i class="fa-regular fa-address-card"></i>
                                <h3>10 YEAR WARRANTY</h3>
                                <p>
                                    Quality comes first and our products are designed to last.
                                </p>
                            </Li>
                        </ul>
                    </div>
                </div>
                <div class="productDesc">
                    <h3>Description</h3>
                    <div class="line"></div>
